# EditorConfig helps maintain consistent coding styles
root = true

# Semua file Go
[*.go]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

# File konfigurasi & teks
[*.{yaml,yml,json,md,txt,env}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

# Makefile (harus pakai tab)
[Makefile]
indent_style = tab
