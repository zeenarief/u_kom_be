# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=belajar_golang

# JWT Secrets (JANGAN gunakan nilai default ini di production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_MODE=debug # debug, release, test

# Token Expiration (in minutes or hours)
JWT_ACCESS_TOKEN_EXPIRE=15    # 15 minutes
JWT_REFRESH_TOKEN_EXPIRE=10080 # 7 days in minutes (7 * 24 * 60)

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300 # in seconds (5 minutes)

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,Accept,Origin,X-Requested-With

# Logging Configuration
LOG_LEVEL=info # debug, info, warn, error
LOG_FORMAT=json # json, text

# Timezone
TZ=Asia/Jakarta

# SSL/TLS Configuration (optional)
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_TIME_WINDOW=3600 # 1 hour in seconds