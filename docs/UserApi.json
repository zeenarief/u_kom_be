        ],
        "summary": "Delete user",
        "description": "Delete user by ID",
        "operationId": "deleteUser",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "User ID (UUID)",
            "schema": {
              "type": "string",
